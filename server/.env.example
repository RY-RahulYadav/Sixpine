# Django Secret Key - CHANGE THIS IN PRODUCTION!
SECRET_KEY=django-insecure-please-change-this-in-production

# Debug Mode - Set to False in production
DEBUG=False

# Allowed Hosts - Add your domain names (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Allowed Origins - Add your frontend URLs (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Email Configuration (Gmail)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-if-using-smtp

# Google OAuth2 Configuration (for secure Gmail API access)
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret

# Gmail OAuth Token (auto-managed by setup script - DO NOT EDIT MANUALLY)
# This will be automatically set when you run: python setup_oauth_gmail.py
GMAIL_OAUTH_TOKEN=

# Production SSL Settings (set to True for HTTPS in production)
SECURE_SSL_REDIRECT=False
